{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"epnapp",
      "labels":{
         "app":"epnapp"
      }
   },
   "spec":{
      "replicas":3,
      "selector":{
         "app":"epnapp"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"epnapp"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"epnapp",
                  "image":"lirancohen/epn_app_build:latest",
                  "ports":[
                     {
                        "name":"go-server",
                        "containerPort":3000,
                        "hostPort":8080
                     }
                  ]
               }
            ]
         }
      }
   }
}
